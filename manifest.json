{
  "manifest_version": 3,
  "name": "Facebook Friend Request Manager",
  "version": "1.0",
  "description": "Extension để quản lý lời mời kết bạn Facebook - tự động hủy lời mời đã gửi",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "https://www.facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extension Demo",
    "default_icon": {
      "16": "image/image16.png",
      "32": "image/image32.png",
      "48": "image/image48.png",
      "128": "image/image128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["facebook-content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["instagram-content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://www.facebook.com/*"],
      "exclude_globs": ["https://www.instagram.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "image/image16.png",
    "32": "image/image32.png",
    "48": "image/image48.png",
    "128": "image/image128.png"
  }
}
